        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//Querying assets installed at the current location
	var gr = new GlideRecord('alm_hardware');
	gr.addEncodedQuery('location.sys_id='+current.location);
	gr.query();
	while(gr.next()){
		//Inserting the POS details for refresh into Hardware checklist
		var gr2 = new GlideRecord('x_chfa_amps_hardware_checklist');
		gr2.initialize();
		gr2.setValue('parent',current.sys_id);
		gr2.setValue('asset',gr.sys_id);
		gr2.insert();
	}
	
})(current, previous);]]></script>
